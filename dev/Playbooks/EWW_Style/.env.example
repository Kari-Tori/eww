# ── EWW_Style: konfiguracja środowiskowa ──────────────────────────────────────

# Kolory
EWW_ACCENT_HEX="#00E676"     # zielony (recykling)
EWW_TECH_HEX="#00B4FF"       # niebieski (tech)

# Włączniki motywów systemowych
EWW_ENABLE_SDDM=0            # 1 = ustaw sugar-candy i enable sddm
EWW_ENABLE_PLYMOUTH=0        # 1 = ustaw catppuccin-mocha + update-initramfs

# Plasma / Kvantum / GTK
EWW_PLASMA_THEME="catppuccin-mocha"   # breeze-dark|catppuccin-mocha|tokyonight|nordic|dracula|rose-pine|fluent|sweet
EWW_KVANTUM_THEME="Catppuccin-Mocha"
EWW_GTK_THEME="Breeze-Dark"

# Sudo
EWW_SUDO_TIMEOUT=25          # sekundy
EWW_SUDO_OPTIONAL=0          # 1 = nie wymagaj sudo cache
EWW_NO_SUDO_KEEP=0           # 1 = nie odświeżaj biletu w tle

# UX
EWW_STEP_PAUSE=0.1           # spowolnienie między krokami
EWW_BOX_PAUSE=0.03           # spowolnienie drukowania linii w boxach
EWW_NO_COLOR=0               # 1 = wyłącz kolory TTY
EWW_SILENCE_NOISE=1          # 1 = ucisz niestandardowe PS1/PROMPT_COMMAND
EWW_RELOAD_AFTER_PALETTE=1   # 1 = miękki restart Plasmy po palecie

# Debug
EWW_TRAP_ERR=1               # 1 = pokaż box przy nieobsłużonym ERR
EWW_DEBUG=0                  # 1 = set -x
